{
  "manifest_version": 2,
  "name": "Tag Text Extractor",
  "version": "1.0",
  "description": "A tool for extracting text within a specific HTML tag",
  "icons": {
    "16": "icons/ico16.png",
    "32": "icons/ico32.png",
    "128": "icons/ico.png"
  },
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "icons/ico.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
